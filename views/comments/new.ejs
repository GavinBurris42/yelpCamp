<%- include("../partials/header") %>

<div class="row">
	<h1 class="formHeader">Add New Comment to <%= campground.name %></h1>
	<div class="yelpForm">
		<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text" required>
			</div>
			<div class="form-group">
				<button class="btn btn-default btn-lg btn-block btn-primary">Submit</button>
			</div>
		</form>
		<a href="/campgrounds/<%= campground._id %>">Go Back</a>
	</div>

</div>

<%- include("../partials/footer") %>
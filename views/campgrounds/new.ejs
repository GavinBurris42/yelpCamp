<%- include("../partials/header") %>

<div class="row">
	<h1 class="formHeader">Create a new campground</h1>
	<div class="yelpForm">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="name" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="image url" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="description" required>
			</div>
			<div class="form-group">
				<button class="btn btn-default btn-lg btn-block btn-primary">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>